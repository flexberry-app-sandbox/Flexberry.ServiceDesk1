<h3 class="ui header">{{t "forms.i-i-s-service-desk-incident-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-service-desk-incident-e.iD-caption")
      data-test-i-i-s-service-desk-incident-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.topic
      class=(if (v-get validationModel "topic" "isInvalid") "error")
      label=(t "forms.i-i-s-service-desk-incident-e.topic-caption")
      data-test-i-i-s-service-desk-incident-e-topic=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "topic" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.description
      class=(if (v-get validationModel "description" "isInvalid") "error")
      label=(t "forms.i-i-s-service-desk-incident-e.description-caption")
      data-test-i-i-s-service-desk-incident-e-description=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "description" "message")}}
  </div>
  <div class="field" data-test-i-i-s-service-desk-incident-e-status="true">
    <label>{{t "forms.i-i-s-service-desk-incident-e.status-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-service-desk-t-status")
      value=model.status
      class=(if (v-get validationModel "status" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "status" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-service-desk-incident-e.soveBefore-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.soveBefore
      class=(if (v-get validationModel "soveBefore" "isInvalid") "error")
      data-test-i-i-s-service-desk-incident-e-soveBefore=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "soveBefore" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-service-desk-incident-e.responsible-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.responsible
      displayAttributeName="name"
      autocomplete=true
      relationName="responsible"
      projection="ResponsibleL"
      title=(t "forms.i-i-s-service-desk-incident-e.responsible-caption")
      readonly=readonly
      componentName="responsibleLookup"
      class=(if (v-get validationModel "responsible" "isInvalid") "error")
      data-test-i-i-s-service-desk-incident-e-responsible=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "responsible" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-service-desk-incident-e.counterparty-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.counterparty
      displayAttributeName="name"
      autocomplete=true
      relationName="counterparty"
      projection="CounterpartyL"
      title=(t "forms.i-i-s-service-desk-incident-e.counterparty-caption")
      readonly=readonly
      componentName="counterpartyLookup"
      class=(if (v-get validationModel "counterparty" "isInvalid") "error")
      data-test-i-i-s-service-desk-incident-e-counterparty=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "counterparty" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-service-desk-incident-e.comment-caption"}}</label>
    {{flexberry-groupedit
      componentName="commentGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.comment
      content=model.comment
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "comment" "isInvalid") "error")
      data-test-i-i-s-service-desk-incident-e-comment=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "comment" "message")}}
  </div>
</form>
